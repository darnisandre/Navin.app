<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="guilherme.krzisch.com.mybeaconclient.view.MainTabActivity$PlaceholderFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/estimote3_image"
        android:layout_below="@+id/textViewCatName"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome da Rota:"
        android:id="@+id/textViewTitleName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewTitle"
        android:text="texto"
        android:layout_below="@+id/textViewTitleName"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textViewDesc"
        android:lines="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Descrição:"
        android:id="@+id/textViewDescName"
        android:layout_below="@+id/textViewTitleName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="texto"
        android:id="@+id/textViewDesc"
        android:lines="3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewDescName"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categorias presentes na Rota:"
        android:id="@+id/textViewCatName"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewDesc"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="texto"
        android:id="@+id/textViewCat"
        android:lines="8"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewCatName"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/textViewDesc" />

</RelativeLayout>
